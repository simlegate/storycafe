div.span4.float_content.no_margin
  - if meta[:type]=="group"
   section
     section
       - if current_group
         h3(data-attribute="title") = current_group.title
         .row-fluid
             .span12
               .row-fluid
                 .span12
                   = form_for current_group ,:method =>"put",:remote => true,:html => {:id => "description_content","data-type" => "json"} do |f|
                     textarea( placeholder="#{t('story.description')}" id="description-areatext" name="group[description]")
                       = current_group.description
  - else
   section
     section
       - if current_story
         h3(data-attribute="title") = current_story.title
         .row-fluid
            .span12
              .row-fluid
                .span12
                  = form_for current_story , :method =>"put", :remote => true ,:html => {:id => "description_content",:'data-type' => "json"} do |f|
                    textarea( placeholder="#{t('story.description')}" id="description-areatext" name="description" )
                      =  current_story.description
                .span6
                  ticketLabel.icon.assignee
                    = get_user_name_by_user_id(current_story.user_id)
                .span6
                  .ticketLabel.icon.calendar = current_story.created_at
