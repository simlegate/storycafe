        = f.text_field :description , :class =>"span6", :placeholder => "please description you'r group"
      .modal-footer
        = f.submit  :class => "btn btn-primary"
  - if resource
   table.table.table-condensed#group_list
     -  resource.each do |s|
       - if current_group && current_group.id ==="#{s.id}"
         tr.resource_active
           td.group_title = link_to s.title ,edit_group_path(s) , :method => :get
